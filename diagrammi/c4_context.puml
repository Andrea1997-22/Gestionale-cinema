@startuml C4 Context - Sistema Ticketing Cinema

!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

LAYOUT_WITH_LEGEND()

title Diagramma di Contesto - Sistema Ticketing Cinema

Person(cliente, "Cliente", "Utente che desidera acquistare biglietti per il cinema")

System(ticketing, "Sistema Ticketing Cinema", "Permette ai clienti di visualizzare film, prenotare posti e acquistare biglietti")

System_Ext(pagamento, "Sistema Pagamento", "Gestisce le transazioni di pagamento online")
System_Ext(email, "Sistema Email", "Invia conferme e notifiche ai clienti")
System_Ext(notifiche, "Sistema Notifiche Push", "Invia notifiche push ai dispositivi mobili")

Rel(cliente, ticketing, "Cerca film, prenota posti, acquista biglietti")
Rel(ticketing, pagamento, "Elabora pagamenti")
Rel(ticketing, email, "Invia email di conferma")
